<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itchihuahua.example.com.eva3_banner.Principal">


    <TextView
        android:id="@+id/txtV_modo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgp_modos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AutomÃ¡tico"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:text="Manual"
            android:textSize="16sp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imgV_mostrar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/uno" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiempo:"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtxt_tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="1000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="atras"
            android:layout_weight="1"
            android:text="Atras" />

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="siguiente"
            android:layout_weight="1"
            android:text="Siguiente" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mostrar"
        android:text="Mostrar" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vanessatrevizo.prctica2.Principal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="Año de nacimiento:"
            android:textSize="24sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ETxtAñoN"
            android:layout_weight="0.21"
            android:hint="Ingrese año"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Región de nacimiento:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RbtnGroupRegion">

        <RadioButton
            android:text="Regiones desarrolladas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnRD" />

        <RadioButton
            android:text="América Latina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnAL"
            android:checked="true" />

        <RadioButton
            android:text="Asia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnAsia" />

        <RadioButton
            android:text="Africa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnAfrica" />
    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Genero:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/RbtnGroupGenero">

        <RadioButton
            android:text="Hombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnHombre"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:text="Mujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RbtnMujer"
            android:layout_weight="1" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Expectativa de vida:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="0.17"
            android:textSize="18sp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TxtVwEVida"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Fecha probable del deceso:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="0.31"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TxtVwFDeceso"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>

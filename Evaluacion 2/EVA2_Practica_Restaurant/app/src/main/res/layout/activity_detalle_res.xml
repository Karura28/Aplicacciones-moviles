<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carloshernandez.eva2_practica_restaurant.DetalleRes">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/barrafina"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgVwRes" />

    <TextView
        android:text="Distrito 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TxtVwDireccion"
        android:layout_alignStart="@+id/TxtVwDireccion"
        android:layout_marginTop="31dp"
        android:id="@+id/TxtVwPlaza"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:text="Tel: 442-5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtVwPlaza"
        android:layout_alignStart="@+id/TxtVwPlaza"
        android:layout_marginTop="16dp"
        android:id="@+id/TxtVwTel"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:text="Restaurant Gourmet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtVwNombreRes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/TxtVwTipoRes"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:text="Periferico de la Juventud #312"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtVwDireccion"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_below="@+id/TxtVwTipoRes"
        android:layout_alignEnd="@+id/TxtVwNombreRes"
        android:layout_marginTop="118dp" />

    <TextView
        android:text="Barra Fina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:id="@+id/TxtVwNombreRes"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
